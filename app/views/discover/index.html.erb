<center>
  <h3>Discover Movies</h3>

  <%= button_to 'Find Top Rated Movies', "movies", method: :get, params: { :q => 'top_rated' } %>
  <br>
  <br>
  <p>OR</p>
  <br>
  <br>
  <%= form_with url: "movies", method: :get , local: true do |f| %>
    <%= f.text_field :q, placeholder: 'Search by movie title' %>
    <%= f.submit 'Find Movies' %>
  <% end %>
</center>
