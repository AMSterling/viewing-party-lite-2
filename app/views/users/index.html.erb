<% unless current_user %>

  <div id='login'>
    <%= render partial: 'login_form', locals: { path: login_path } %>
  </div>

  <br>

  <div id='button'>
    <%= button_to 'Create New User', register_path, method: :get %>
  </div>

<% end %>

<br>

<section id='existing_users'>
  <h2>Existing Users</h2>

  <br>

  <%= render partial: "shared/existing_users", locals: {users: @users} %>
</section>
