<br>

<div id='button'>
  <%= button_to 'Discover Page', discover_path, method: :get %>
</div>

<br>
<% if @top_movies != nil %>
<h2>Top Rated Movies</h2>
  <% @top_movies.each do |movie| %>
  <center>
    <div id='#movie_'<%= movie.movie_id %>>
      <strong><%=link_to movie.title, movie_path(movie.movie_id)%></strong>
      Vote Average: <%= movie.rating %>
    </div>
    <br>
  </center>
  <% end %>
<% else %>
<h2>Movie Results for: <%= params[:q] %></h2>
  <br>
  <% @searched_movies.each do |movie| %>
  <center>
    <div id='searched_movies'>
      <strong><%= link_to movie.title, movie_path(movie.movie_id)%></strong>
      Vote Average: <%= movie.rating %>
    </div>
    <br>
  </center>
  <% end %>
<% end %>
